<h1>Listing Products</h1>

<%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_product_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Price</th>
		<th colspan="3">Actions</th>
	</tr>

	<%@products.each do |product| %>
		<tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, product_path(product), class: 'btn btn-primary' %></td>
      <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_product_path(product), class: 'btn btn-warning' %></td>
      <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
	<% end %>
</table>